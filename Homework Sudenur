#include <stdio.h>
#include <stdlib.h>
#include <string.h>

	struct Books {
		
		char title[50];
		char author[50];
		char subject[100];
		int book_id;
		
		
		
	};


int main() {
	
	printf("Please enter information without spaces.\n\n");
	
	struct Books Book1;
	printf("Enter Book1's title: ");
	scanf("%s",&Book1.title);
	printf("Enter Book1's author: ");
	scanf("%s",&Book1.author);
	printf("Enter Book1's subject: ");
	scanf("%s",&Book1.subject);
	printf("Enter Book1's id: ");
	scanf("%d",&Book1.book_id);
	
	struct Books Book2;
	printf("Enter Book2's title: ");
	scanf("%s",&Book2.title);
	printf("Enter Book2's author: ");
	scanf("%s",&Book2.author);
	printf("Enter Book2's subject: ");
	scanf("%s",&Book2.subject);
	printf("Enter Book2's id: ");
	scanf("%d",&Book2.book_id);
	
	printf("\n\n");
	
	printf("Book 1 title : %s \n", Book1.title);
	printf("Book 1 author : %s \n", Book1.author);
	printf("Book 1 subject : %s \n", Book1.subject);
	printf("Book 1 book_id : %d \n", Book1.book_id);
	printf("Book 2 title : %s \n", Book2.title);
	printf("Book 2 author : %s \n", Book2.author);
	printf("Book 2 subject : %s \n", Book2.subject);
	printf("Book 2 book_id : %d \n", Book2.book_id);
	
	
	
	
	
	return 0;
}
